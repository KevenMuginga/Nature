@model IEnumerable<Nature.Models.SerVivo>

<div class="p">
    <h3>Home</h3>
</div>

<hr style="background-color:#8AC926; min-height:2px; opacity:1;" />

<div class="p-3 row">
    @foreach (var item in Model)
    {


        <div class="col-md-3 pb-5">
            
                @if (item.Imagem != null)
                {
                    var base64 = Convert.ToBase64String(item.Imagem);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                    <img src="@imgSrc" style="max-width: 100%; height: 300px; " />
                }
          
            <h3>@item.Nome</h3>
            @*<p class="text-bg-light txt">@item.Genero.GeneroNome</p>
            <p class="text-black">@item.Caracteristicas</p>
            <p class="text-black">@item.Ambiente</p>*@

            <div>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <button style="border:none;" ><a href="@Url.Action("Delete", "Seres", new { id = item.Id})">Deletar</a></button>
            </div>
            
            <hr style="background-color:#8AC926; min-height:2px; opacity:1;" />
        </div>

    }
</div>

