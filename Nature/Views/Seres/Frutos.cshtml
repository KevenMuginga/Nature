@model IEnumerable<Nature.Models.SerVivo>

<div class="p">
    <h3>Frutos</h3>
</div>

<hr style="background-color:#8AC926; min-height:2px; opacity:1;" />

<div class="p-3 row">
    @foreach (var fruto in Model)
    {


        <div class="col-md-3 pb-5">

            @if (fruto.Imagem != null)
            {
                var base64 = Convert.ToBase64String(fruto.Imagem);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <img src="@imgSrc" style="max-width: 100%; height: 300px; " />
            }

            <h3>@fruto.Nome</h3>
            <p class="text-bg-light txt">fruto.Genero</p>
            <p class="text-black">@fruto.Caracteristicas</p>
            <p class="text-black">@fruto.Ambiente</p>

            <div>
                @Html.ActionLink("Edit", "Edit", new { id = fruto.Id }) |
                @Html.ActionLink("Details", "Details", new { id = fruto.Id }) |
                @*@Html.ActionLink("Delete", "Delete", new { id = fruto.Id })*@
            </div>

            <hr style="background-color:#8AC926; min-height:2px; opacity:1;" />
        </div>

    }
</div>

